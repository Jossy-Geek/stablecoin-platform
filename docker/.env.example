# Docker Environment Variables
# Copy this file to .env in the docker/ directory and configure

# Network Configuration
NETWORK_NAME=stablecoin-network

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
POSTGRES_DB=st_user_db
POSTGRES_USER_PORT=5432
POSTGRES_TRANSACTION_DB=st_transaction_db
POSTGRES_TRANSACTION_PORT=5433

# MongoDB Configuration
MONGO_DATABASE=notification_db
MONGO_USER=
MONGO_PASSWORD=
MONGO_PORT=27017

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Kafka Configuration
KAFKA_PORT=9092
KAFKA_CONTROLLER_PORT=9093
KAFKA_CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk
KAFKA_NODE_ID=1
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092

# Service Ports
USER_SERVICE_PORT=3001
TRANSACTION_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004
SOCKET_SERVICE_PORT=3005
USER_FRONTEND_PORT=3006
ADMIN_FRONTEND_PORT=3007

# Database IP Override (if using external databases)
# Set these to use IP addresses instead of container names
# Example: DATABASE_HOST_IP=10.153.39.166
DATABASE_HOST_IP=
REDIS_HOST_IP=
KAFKA_BROKER_IP=
RABBITMQ_URL_IP=
