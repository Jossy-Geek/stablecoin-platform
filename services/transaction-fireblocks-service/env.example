# Server Configuration
NODE_ENV=development
PORT=3003
SERVICE_NAME=transaction-fireblocks-service

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=admin
DATABASE_NAME=st_transaction_db
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# Redis Configuration (optional - leave empty if not using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=transaction-fireblocks-service
KAFKA_GROUP_ID=transaction-fireblocks-service-group
KAFKA_RETRY_TOPIC=transaction-retry
KAFKA_DLQ_TOPIC=transaction-dlq
KAFKA_MAX_RETRIES=3

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Blockchain Configuration
ETHEREUM_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=
CONTRACT_ABI_PATH=../../contracts/artifacts/contracts/Stablecoin.sol/Stablecoin.json
PRIVATE_KEY=

# Custodian Configuration
# Set IS_VAULT_ENABLED=true to enable custodian services
IS_VAULT_ENABLED=false

# Custodian Provider Selection
# Top 5 Options: fireblocks, bitgo, coinbase_custody, anchorage, fidelity
# Additional Options: mock (for testing), local (direct blockchain interaction)
# Default: fireblocks
CUSTODIAN_PROVIDER=fireblocks

# Fireblocks Configuration (when CUSTODIAN_PROVIDER=fireblocks)
VAULT_API_KEY=
VAULT_API_SECRET_KEY_PATH=./vault-secret.key
VAULT_PUBLIC_KEY_PATH=./vault-public.key
ETH_ASSET_ID=ETH_TEST3

# BitGo Configuration (when CUSTODIAN_PROVIDER=bitgo)
BITGO_API_KEY=
BITGO_API_SECRET=
BITGO_ENVIRONMENT=test
BITGO_WALLET_ID=

# Coinbase Custody Configuration (when CUSTODIAN_PROVIDER=coinbase_custody)
COINBASE_API_KEY=
COINBASE_API_SECRET=
COINBASE_PASSPHRASE=
COINBASE_WALLET_ID=

# Anchorage Digital Configuration (when CUSTODIAN_PROVIDER=anchorage)
# Note: Not yet implemented - will use Mock custodian as fallback
# ANCHORAGE_API_KEY=
# ANCHORAGE_API_SECRET=
# ANCHORAGE_ENVIRONMENT=test

# Fidelity Digital Assets Configuration (when CUSTODIAN_PROVIDER=fidelity)
# Note: Not yet implemented - will use Mock custodian as fallback
# FIDELITY_API_KEY=
# FIDELITY_API_SECRET=
# FIDELITY_ENVIRONMENT=test

# Vault Account Configuration
MINT_VAULT_ACCOUNT_ID=
BURN_VAULT_ACCOUNT_ID=
BURN_EXTERNAL_WALLET_ID=
BURN_ONE_TIME_ADDRESS=

# Transaction Configuration
GAS_LIMIT=100000
GAS_PRICE_MULTIPLIER=1.2
CONFIRMATION_BLOCKS=1

# CORS Configuration
# Comma-separated list of allowed origins (e.g., http://localhost:3000,http://localhost:3007)
CORS_ORIGIN=http://localhost:3000,http://localhost:3007,http://localhost:3006


# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Demo Events Configuration (for testing)
ENABLE_DEMO_SOCKET_EVENTS=true
# Optional: Set this to your actual user ID to receive demo events
# If not set, defaults to '00000000-0000-0000-0000-000000000002'
DEMO_USER_ID=00000000-0000-0000-0000-000000000002
