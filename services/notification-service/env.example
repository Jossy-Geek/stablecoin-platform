# Server Configuration
NODE_ENV=development
PORT=3004

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_NAME=notification_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# CORS Configuration
# Use * for all origins, or specify comma-separated origins: http://localhost:3000,http://localhost:3001
CORS_ORIGIN=*

# Email Provider Configuration
# Supported providers: sendgrid, mailgun
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration (when EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=
SENDGRID_USER=apikey

# Mailgun Configuration (when EMAIL_PROVIDER=mailgun)
MAILGUN_USER=
MAILGUN_PASSWORD=
MAILGUN_HOST=smtp.mailgun.org
MAILGUN_PORT=587

# Email From Address (used by all providers)
EMAIL_FROM=
